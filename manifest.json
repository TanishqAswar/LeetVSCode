{
  "manifest_version": 3,
  "name": "LeetVSCode",
  "version": "0.1",
  "description": "Generate minimal driver code in VSCode for LeetCode & GFG problems.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/*", "*://*.geeksforgeeks.org/*"],
      "js": ["content.js"]
    }
  ]
}
