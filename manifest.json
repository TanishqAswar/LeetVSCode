{
  "manifest_version": 3,
  "name": "LeetVSCode",
  "version": "0.0.1",
  "description": "Generate driver code and extract solutions for competitive programming platforms",
  "permissions": ["activeTab", "scripting", "storage","tabs"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.leetcode.com/*",
    "https://geeksforgeeks.org/*",
    "https://www.geeksforgeeks.org/*",
    "https://codingninjas.com/*",
    "https://www.codingninjas.com/*",
    "https://codeforces.com/*",
    "https://www.codeforces.com/*",
    "https://codechef.com/*",
    "https://www.codechef.com/*",
    "https://hackerrank.com/*",
    "https://www.hackerrank.com/*",
    "https://atcoder.jp/*",
    "https://generativelanguage.googleapis.com/*",
    "https://buy.stripe.com/*"
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "LeetVSCode",
    "default_icon": {
      "16": "dist/icons/icon.png",
      "48": "dist/icons/icon.png",
      "128": "dist/icons/icon.png"
    }
  },
  "icons": {
    "16": "dist/icons/icon.png",
    "48": "dist/icons/icon.png",
    "128": "dist/icons/icon.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://www.leetcode.com/*",
        "https://geeksforgeeks.org/*",
        "https://www.geeksforgeeks.org/*",
        "https://codingninjas.com/*",
        "https://www.codingninjas.com/*",
        "https://codeforces.com/*",
        "https://www.codeforces.com/*",
        "https://codechef.com/*",
        "https://www.codechef.com/*",
        "https://hackerrank.com/*",
        "https://www.hackerrank.com/*",
        "https://atcoder.jp/*"
      ],
      "js": ["dist/content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
